<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.vikinc.community.mapper.UserMapper">

    <insert id="insert" parameterType="org.vikinc.community.dto.User">
        INSERT INTO user (name,account_id,token,gmt_create,gmt_modified) value (#{name},#{accountId},#{token},#{gmtCreate},#{gmtModified})
    </insert>

    <select id="selectByToken" parameterType="java.lang.String" resultType="org.vikinc.community.dto.User">
        SELECT * FROM user WHERE token = #{token}
    </select>

</mapper>
